<%- include('header', {title: `All Sightings`}); -%>
  <body >
   <%- include('nav', locals.numVisitors); -%>
   <div class=" card-columns">
    <% sightings.forEach((sight, index)=>{%>
      <div class= "">
        <div class="card bg-light border d-inline-block " id="item-<%=sight.id%>">
          <div class="card-body">
            <%- include('sighting-header', sight); -%>
             
            <div class="btn-group flex-wrap">
              <a href="/sighting/<%=sight.id%>"  class="btn btn-outline-secondary btn-sm stretched-link">Expand</a>
              <a href="/sighting/<%=sight.id%>/edit"  class="btn btn-outline-secondary btn-sm">Edit</a>
              <form
                action="/sighting/<%=sight.id%>/delete?_method=DELETE"
                method="POST"
                class="d-inline-block"
              >
                <input
                  type="submit"
                  value="Delete"
                  id="delete"
                  class="btn btn-outline-secondary btn-sm" style="border-radius: 0"
        
                />
        
              </form>
  
              </div>
            </div>
       </div>
    </div>
    <% }) %>
  </body>
</html>
